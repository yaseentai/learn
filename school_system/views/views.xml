<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="school_system.school_class">
      <field name="name">school class tree</field>
      <field name="model">school.class</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

  <record id="school_system.subject" model="ir.ui.view"> 
    <field name="name">school Subject Form</field> 
    <field name="model">school.subject</field>
    <field name="arch" type="xml"> 
      <form string="school Subject Form">        
          <field name="name"/>
          <field name="level"/>
      </form> 
    </field> 
  </record> 

  <record id="school_system.teacher" model="ir.ui.view"> 
      <field name="name">Teacher</field>
      <field name="model">school.teacher</field>
      <field name="arch" type="xml">
       <form string="school Teacher Form">        
          <field name="name"/>
      </form> 
    </field>
    </record>

      <record id="school_system.student" model="ir.ui.view"> 
      <field name="name">Student</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
       <form string="school Student Form">        
          <field name="name"/>
      </form> 
    </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="school_system.act_main_window">
      <field name="name">Classes</field>
      <field name="res_model">school.class</field>
      <field name="view_mode">tree,form</field>
    </record>

        <record model="ir.actions.act_window" id="school_system.act_subject_window">
      <field name="name">Subject</field>
      <field name="res_model">school.subject</field>
      <field name="view_mode">tree,form</field>
    </record>

 <record model="ir.actions.act_window" id="school_system.act_teacher_window">
      <field name="name">Teacher</field>
      <field name="res_model">school.teacher</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <record model="ir.actions.act_window" id="school_system.act_student_window">
      <field name="name">Student</field>
      <field name="res_model">school.student</field>
      <field name="view_mode">tree,form</field>
    </record>
       

    <!-- Top menu item -->

    <menuitem name="The School System" id="school_system.menu_root"/>
    <menuitem name="Home" id="school_system.home" parent="school_system.menu_root" action="school_system.act_main_window" sequence="1" />
    <menuitem name="Subject" id="school_system.subject" parent="school_system.menu_root" action="school_system.act_subject_window" sequence="2"/>
    <menuitem name="Teacher" id="school_system.teacher" parent="school_system.menu_root" action="school_system.act_teacher_window" sequence="3"/>
    <menuitem name="Student" id="school_system.student" parent="school_system.menu_root" action="school_system.act_student_window" sequence="4"/>


  

  </data>
</odoo>